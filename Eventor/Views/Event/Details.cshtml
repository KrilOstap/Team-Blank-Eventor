@model EventDTO
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-3">
        <div class="card">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img class="h-50 card-img-top" src="~/Images/@Model.ImagePath" alt="Card image cap">
            }
            else
            {
                <img class="h-50 card-img-top" src="~/Images/default.png" alt="Card image cap">
            }
            <div class="card-body">
                <h6 class="card-title">@Model.Title</h6>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <label>Email</label>
        <p>@Model.Organizer.Email</p>

        <label>Address</label>
        <p>@($"{Model.City} {Model.Address} {Model.Number}")</p>

        @if (true)
        {
            <a asp-controller="Event" asp-action="Remove" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            <a asp-controller="Event" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        }
        
        @if (true)
        {
            <a asp-controller="Subscription" asp-action="Subscribe" asp-route-id="@Model.Id" class="btn btn-success">Subscribe</a>
        }
        else
        {
            <a asp-controller="Subscription" asp-action="Unsubscribe" asp-route-id="@Model.Id" class="btn btn-danger">Unsubscribe</a>
        }
    </div>
</div>